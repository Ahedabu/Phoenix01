@model PrivateChatsViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Chat</h2>

<div class="jumbotron">
    <div id="chatwindow" class="container" style="max-height: 400px;overflow-y: scroll;background:white;">
        @Html.Partial("PrivateChatWindowPartial", Model)
    </div>
    <hr />


    <form asp-controller="PrivateChat" asp-action="Index" method="post" class="form-horizontal" asp-antiforgery="true" enctype="multipart/form-data">
        <div class="row-lg-12">
            <input asp-for="PrivateChatMessage" class="form-control" style="max-width: 100%;" />
            <span asp-validation-for="PrivateChatMessage"></span>
        </div>
        <br />
        <div class="row-md-2">
            <button type="submit" class="btn btn-default">Post / Reload</button>
        </div>
    </form>
</div>


@section Scripts {

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script>
        $(document).ready(function () {
            $("#chatwindow").scrollTop($("#chatwindow")[0].scrollHeight); // scroll to the bottom of the chat window
            setInterval(function () {

                $("#chatwindow").load("@(Url.Action("UpdateChat", "PrivateChat"))?id=@Model.UserB.UserName");
            }, 1500);

        });
    </script>
}