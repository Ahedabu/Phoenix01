@model Phoenix01.Models.ManageViewModels.UserProfileViewModel

@{
    ViewData["Title"] = "User Profile";
}

<h2>UserProfile</h2>

<div>
    <img src="@Model.UserImage" class="img-circle"
         style="max-width:120px;
            height:auto;
            background: #FFFFFF;
            margin: auto;
            border-radius: 100px;
            padding: 3px;
            box-shadow: 0px 0px 10px #888;" />
</div>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.RegistrationDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RegistrationDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.MiddleName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MiddleName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Zip)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Zip)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.StreetName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StreetName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.State)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Country)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ChosenLanguages)
        </dt>
        @foreach (var lang in Model.ChosenLanguages)
        {
            
            <dd>
                @lang.Name
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="EditUserProfile">Edit</a> | 
    <a asp-action="Home/Index">Home</a>
</div>
