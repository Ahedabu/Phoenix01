@model UserListViewModel


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Users</h2>

<form asp-controller="Users" asp-action="Index" method="post" class="form-horizontal" asp-antiforgery="true" enctype="multipart/form-data">
    <hr />
   
    <div class="row row-list">

        <div class="col-md-3">
            <select asp-for="FilteredLanguage" class="form-control" asp-items="Model.LanguagesDropDown"><option selected>--Select Language--</option></select>
        </div>

        <div class="col-md-3">
            <select asp-for="FilteredHobby" class="form-control" asp-items="Model.HobbyDropDown"><option selected>--Select Hobby--</option></select>
        </div>

        <div class="col-md-3">
            <select asp-for="FilteredAgeGroup" class="form-control" asp-items="Model.AgeGroupDropDown"><option selected>--Select Age Group--</option></select>
        </div>

        <div class="col-md-2">
            <button type="submit" class="btn btn-default">Update</button>
        </div>
    </div>
    <hr />
</form>

<table class="table" style="width:300px;">

    <tbody>
        @if (Model.UserList != null)
        {
            @foreach (var item in Model.UserList)
            {
                <tr>
                    <th rowspan="5" width="50px">
                        <a asp-controller="Manage" asp-action="UserProfile" asp-route-id="@item.Email">
                            <img src="@(item.UserImage)" alt="Sample Image" style="max-width:50px;height:auto;" />
                        </a>
                    </th>

                    <td style="font-weight: bold;">
                        @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                    </td>

                </tr>
                <tr>
                    <td style="font-weight: bold;">
                        Age:
                        @Html.DisplayFor(modelItem => item.UserAge)
                    </td>
                </tr>
                <tr />
                <tr>
                    <td>
                        Country:
                        @Html.DisplayFor(modelItem => item.Country)
                    </td>
                </tr>
                            <tr>
                                <td>
                                    Email:
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                            </tr>
            }
        }
    </tbody>
</table>
