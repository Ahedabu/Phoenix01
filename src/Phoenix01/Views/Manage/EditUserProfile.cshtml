            <label asp-for="Hobbies" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Hobbies" class="form-control" asp-items="Model.HobbyList"><option></option></select>
            </div>
        </div>*@



        @*<div class="form-group">
                <label asp-for="Hobbies" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    @{
                        for (int i = 0; i < Model.Hobbies.Count(); i++)
                        {
                            <label asp-for=@Model.Hobbies[i].Name.ToString()></label>
                            <input asp-for="ChosenHobbies[Model.Hobbies[i]]" />

                                <input asp-for="@Model.ChosenHobbies[Model.Hobbies[i]]" type="checkbox" />
                                <input asp-for="@Model.Hobbies[i].Name" type="checkbox" />
                                <br />
                        }
                    }

                </div>
            </div>*@



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-default">Update</button>
            </div>
        </div>

</form>

<div>
    <a asp-action="UserProfile">Back</a> |
    <a asp-controller="Home" asp-action="Index">Home</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
