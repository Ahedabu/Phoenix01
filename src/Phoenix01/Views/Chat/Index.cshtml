@model ChatsViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Chat</h2>

<div class="well" id="chatwindow">
    @Html.Partial("ChatWindowPartial", Model)
</div>
<hr />

<div>
    <form asp-controller="Chat" asp-action="Index" method="post" class="form-horizontal" asp-antiforgery="true" enctype="multipart/form-data">

        <div class="form-group">
            <div class="col-lg-8">
                <input asp-for="ChatMessage" class="form-control" />
                <span asp-validation-for="ChatMessage"></span>
            </div>
        </div>

        <div class="col-md-2">
            <button type="submit" class="btn btn-default">Update</button>
        </div>
    </form>
</div>

<div class="col-md-2">
    <button id="chatbutton" type="submit" class="btn btn-default">UpdateNoPost</button>
</div>

@section Scripts {
    <script>
        $(document).ready(function(){
            setInterval(function () {
                $("#chatwindow").load('@(Url.Action("UpdateChat", "Chat", null))');
            }, 2000);
        });
    </script>

