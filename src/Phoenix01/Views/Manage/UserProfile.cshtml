@model Phoenix01.Models.ManageViewModels.UserProfileViewModel

@{
    ViewData["Title"] = "User Profile";
}

<h2>@Html.DisplayFor(model => model.UserName)</h2>
<p class="text-success">@ViewData["StatusMessage"]</p>

<div>
    <img src="@Model.UserImage" class="img-circle"
         style="max-width:120px;
            height:auto;
            background: #FFFFFF;
            margin: auto;
            border-radius: 100px;
            padding: 3px;
            box-shadow: 0px 0px 8px #888;" />
</div>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.RegistrationDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RegistrationDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.MiddleName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MiddleName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.UserAge)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserAge)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Zip)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Zip)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.StreetName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StreetName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.State)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Country)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ChosenLanguages)
        </dt>
        @foreach (var lang in Model.ChosenLanguages)
        {
            <dd>
                @lang.Name
            </dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.ChosenHobbies)
        </dt>
        @foreach (var hobby in Model.ChosenHobbies)
        {
            <dd>
                @hobby.Name
            </dd>
        }
    </dl>
</div>
<br />
<div>
    @if (Model.IsCurrentUser)
    {
        <p>
            <a asp-action="EditUserProfile">Edit</a>
             | 
            <a asp-controller="Home" asp-action="Index">Home</a>
        </p>
    }
    else
    { 
    <p>
        <a asp-controller="Home" asp-action="Index">Home</a>
    </p>
    }
</div>